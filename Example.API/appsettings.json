{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "server=localhost;userid=root;port=3307;password=admin;database=exampleAPI"
  },
  "ElasticApm": {
    "ServerUrl": "http://localhost:8200",
    "TransactionSampleRate": 1.0,
    "CaptureBody": "all",
    "CaptureBodyContentTypes": "application/x-www-form-urlencoded*, text/*, application/json*, application/xml*"
  },
  "IgnoreHostLogging": [
    "/api/v1/healthcheck",
    "/swagger/index.html",
    "/swagger/v1/swagger.json"
  ],
  "Messaging": {
    "Kafka": {
      "Producers": {
        "Servers": "localhost:9094",
        "Timeout": 15000,
        "EnableRetryOnFailure": true
      },
      "Consumers": {
        "Servers": "localhost:9094",
        "Timeout": 15000,
        "EnableRetryOnFailure": false
      }
    },
    "Retry": {
      "Count": 5,
      "Delay": 20
    }
  }
}
