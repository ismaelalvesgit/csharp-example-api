{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "server=localhost;userid=root;password=admin;database=exampleAPI"
  },
  "ElasticApm": {
    "ServerUrl": "http://localhost:8200",
    "TransactionSampleRate": 1.0,
    "CaptureBody": "all",
    "CaptureBodyContentTypes": "application/x-www-form-urlencoded*, text/*, application/json*, application/xml*"
  },

  "Jobs": {
    "CategoryJob": "*/1 * * * *"
  },

  "Messaging": {
    "Kafka": {
      "Producers": {
        "Servers": "localhost:9093",
        "Timeout": "00:00:01.500",
        "EnableRetryOnFailure": true
      },
      "Consumers": {
        "Servers": "localhost:9093",
        "Timeout": "00:00:01.500",
        "EnableRetryOnFailure": true
      }
    },
    "Retry": {
        "Count": 5,
        "Delay": 20
     }
   }
}
