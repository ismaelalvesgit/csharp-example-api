{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "Default": "server=kubernetes.docker.internal;userid=root;password=admin;database=exampleAPI"
    },
    "ElasticApm": {
        "ServerUrl": "http://server=kubernetes.docker.internal:8200",
        "TransactionSampleRate": 1.0,
        "CaptureBody": "all",
        "CaptureBodyContentTypes": "application/x-www-form-urlencoded*, text/*, application/json*, application/xml*"
    },
    "IgnoreHostLogging": [
        "/api/v1/healthcheck",
        "/swagger/index.html",
        "/swagger/v1/swagger.json"
    ],
    "Messaging": {
        "Kafka": {
            "Producers": {
                "Servers": "kubernetes.docker.internal:9093",
                "Timeout": 15000,
                "EnableRetryOnFailure": true
            }
        },
        "Retry": {
            "Count": 5,
            "Delay": 20
        }
    }
}